                "tables": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "description": "table name"
                    }
                },
                "joins": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "v": {
                                "type": "string",
                                "description": "table name"
                            },
                            "w": {
                                "type": "string",
                                "description": "table name"
                            }
                        }
                    }
                }
            }
        },
        "Patch": {
            "type": "object",
